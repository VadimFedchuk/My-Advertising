<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.main.HistoryFragment"
    android:background="@color/color_background_alternative"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/text_color_white"
        android:textSize="26sp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/avenirnext_bold_01"
        android:text="@string/history" />

    <include layout="@layout/item_confirm_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:background="@drawable/background_cancel_order">

    <View
        android:id="@+id/view2"
        android:layout_width="80dp"
        android:layout_height="5dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_background_alternative"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/cancel_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenirnext_demibold_03"
        android:gravity="center"
        android:text="@string/cancel_order"
        android:textColor="@color/text_color_white"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        android:layout_marginTop="8dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_cancel_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenirnext_regular_08"
        android:gravity="center"
        android:text="@string/text_cancel_order"
        android:textColor="@color/text_color_white"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/cancel_order"
        android:layout_marginTop="15dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_cancel_order" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/avenirnext_regular_08"
        android:text="Отмена в течении первых 60 минут после создания заказа"
        android:textColor="@color/text_color_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/avenirnext_regular_08"
        android:gravity="center"
        android:text="@string/free"
        android:textColor="@color/text_color_white"
        app:layout_constraintBottom_toBottomOf="@+id/text_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/avenirnext_regular_08"
        android:text="Отмена спустя 60 минут после создания заказа"
        android:textColor="@color/text_color_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/avenirnext_regular_08"
        android:gravity="center"
        android:text="-15 %"
        android:textColor="@color/text_color_white"
        app:layout_constraintBottom_toBottomOf="@+id/text_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_5"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/avenirnext_regular_08"
        android:text="Отмена заказа за 24 часа до наступления аренды"
        android:textColor="@color/text_color_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_6"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/avenirnext_regular_08"
        android:gravity="center"
        android:text="-50 %"
        android:textColor="@color/text_color_white"
        app:layout_constraintBottom_toBottomOf="@+id/text_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_7"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/avenirnext_regular_08"
        android:text="Отмена заказа в день наступления аренды"
        android:textColor="@color/text_color_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_8"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/avenirnext_regular_08"
        android:gravity="center"
        android:text="-50 %"
        android:textColor="@color/text_color_white"
        app:layout_constraintBottom_toBottomOf="@+id/text_7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_7" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancel_order_confirm"
        android:layout_width="256dp"
        android:layout_height="50dp"
        android:background="@drawable/button_confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_7"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/confirm"
        android:textColor="@color/text_color_white"
        android:textSize="20sp"
        android:fontFamily="@font/avenirnext_demibold_03"/>

</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>